# 游戏引擎配置文件示例
# 复制此文件为 config.toml 并根据需要修改

[graphics]
# 分辨率设置
[graphics.resolution]
width = 1920
height = 1080

# 显示设置
vsync = true
fullscreen = false
anti_aliasing = "TAA"
shadow_quality = "High"
texture_quality = "High"
effects_quality = "High"

# 光线追踪设置
[graphics.ray_tracing]
enabled = false
shadows = false
reflections = false
global_illumination = false
ambient_occlusion = false

# 超分辨率设置
[graphics.upscaling]
enabled = false
technology = "Auto"  # 可选: Auto, DLSS, FSR, XeSS, NpuAI
quality = "Quality"  # 可选: UltraQuality, Quality, Balanced, Performance, UltraPerformance
render_scale = 0.67  # 渲染分辨率缩放比例

[performance]
# 性能目标
target_fps = 60
auto_optimize = true

# SIMD优化
[performance.simd]
enabled = true
force_instruction_set = null  # 可选: "SSE2", "AVX", "AVX2", "AVX512", "NEON"
batch_size = 1000

# NPU加速
[performance.npu]
enabled = true
backend = "Auto"  # 可选: Auto, OnnxRuntime, TensorRT, CoreML, DirectML
ai_upscaling = false
physics_prediction = false

# 多线程配置
[performance.threading]
worker_threads = 0  # 0表示自动检测
render_threads = 1
physics_threads = 1

# 内存管理
[performance.memory]
texture_cache_mb = 512
model_cache_mb = 256
audio_cache_mb = 128
use_object_pools = true

[audio]
# 音量设置 (0.0 - 1.0)
master_volume = 1.0
music_volume = 0.8
sfx_volume = 1.0
voice_volume = 1.0

# 音频设置
sample_rate = 48000
buffer_size = 1024
muted = false

[input]
# 鼠标设置
mouse_sensitivity = 1.0
mouse_invert_y = false

# 手柄设置
gamepad_deadzone = 0.1
gamepad_vibration = true

# 键盘映射
[input.key_bindings]
forward = "W"
backward = "S"
left = "A"
right = "D"
jump = "Space"
crouch = "C"
sprint = "Shift"
interact = "E"

[logging]
# 日志设置
level = "Info"  # 可选: Trace, Debug, Info, Warn, Error
log_to_file = false
log_file_path = "game_engine.log"
log_to_console = true
